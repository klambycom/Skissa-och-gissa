<h1><%= gettext("Sign in") %></h1>

<%= form_for @conn, session_path(@conn, :create), [as: :session], fn f -> %>
  <div>
    <%= label f, :email %>
    <%= text_input f, :email %>
  </div>

  <div>
    <%= label f, :password %>
    <%= password_input f, :password %>
  </div>

  <%= submit gettext("Sign in") %>
<% end %>
